{
  "name": "legend-transac",
  "version": "1.0.3",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:dev": "tsc",
    "build": "pnpm run prebuild && tsup",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "prebuild": "pnpm run type-check"
  },
  "dependencies": {
    "amqplib": "latest",
    "@types/amqplib": "latest",
    "mitt": "latest"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "eslint-config-custom": "workspace:*"
  },
  "peerDependencies": {
    "amqplib": ">=0.10.3",
    "@types/amqplib": ">=0.10.1",
    "mitt": ">=3.0.1"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": true,
    "sourcemap": false,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "treeshake": true,
    "minify": true,
    "outDir": "dist"
  }
}
